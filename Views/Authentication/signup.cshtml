@model UserRegisterVM

@{
    Layout = "_Layout2";
    
}

@section Css {



}
            <!-- ========== MAIN CONTENT ========== -->
            <main id="content"  class="w-full max-w-md mx-auto p-6">
                <a asp-controller="Home" asp-action="Index" class="header-logo">
                    <img src="~/assets/img/brand-logos/desktop-logo.png" alt="logo" class="mx-auto block dark:hidden">
                    <img src="~/assets/img/brand-logos/desktop-dark.png" alt="logo" class="mx-auto hidden dark:block">
                </a>
                <div class="mt-7 bg-white rounded-sm shadow-sm dark:bg-bgdark">
                    <div class="p-4 sm:p-7">
                        <div class="text-center">
                            <h1 class="block text-2xl font-bold text-gray-800 dark:text-white">Üye Ol</h1>
                            <p class="mt-3 text-sm text-gray-600 dark:text-white/70">
                                Zaten hesabýn varmý?
                                <a class="text-primary decoration-2 hover:underline font-medium"
                                asp-controller="Authentication" asp-action="signin">
                                    Giriþ yap
                                </a>
                            </p>
                        </div>

                        <div class="mt-5">
                            

                            <div
                                class="py-3 flex items-center text-xs text-gray-400 uppercase before:flex-[1_1_0%] before:border-t before:border-gray-200 ltr:before:mr-6 rtl:before:ml-6 after:flex-[1_1_0%] after:border-t after:border-gray-200 ltr:after:ml-6 rtl:after:mr-6 dark:text-white/70 dark:before:border-white/10 dark:after:border-white/10">
                                yada</div>

                            <!-- Form -->
                            <form method="post">
                                <div class="grid gap-y-4">

                                    <!-- Form Group -->
                                    <div>
                                        <label class="block text-sm mb-2 dark:text-white">Ýsim</label>
                                        <div class="relative">
                                            <input type="text" 
                                                class="py-2 px-3 block w-full border-gray-200 rounded-sm text-sm focus:border-primary focus:ring-primary dark:bg-bgdark dark:border-white/10 dark:text-white/70"
                                       required asp-for="@Model.Name">
                                        </div>
                                    </div>
                        <div>
                            <label class="block text-sm mb-2 dark:text-white">Soy Ýsim</label>
                            <div class="relative">
                                <input type="text" 
                                       class="py-2 px-3 block w-full border-gray-200 rounded-sm text-sm focus:border-primary focus:ring-primary dark:bg-bgdark dark:border-white/10 dark:text-white/70"
                                       required asp-for="@Model.Surname">
                            </div>
                        </div>
                                    <!-- End Form Group -->

                                    <!-- Form Group -->
                                    <div>
                                        <label class="block text-sm mb-2 dark:text-white">Mail</label>
                                        <div class="relative">
                                            <input type="email" 
                                                class="py-2 px-3 block w-full border-gray-200 rounded-sm text-sm focus:border-primary focus:ring-primary dark:bg-bgdark dark:border-white/10 dark:text-white/70"
                                       required asp-for="@Model.Mail">
                                        </div>
                                    </div>
                                    <!-- End Form Group -->

                                    <!-- Form Group -->
                                    <div>
                                        <label for="password" class="block text-sm mb-2 dark:text-white">Þifre</label>
                                        <div class="relative">
                                            <input type="password" 
                                                class="py-2 px-3 block w-full border-gray-200 rounded-sm text-sm focus:border-primary focus:ring-primary dark:bg-bgdark dark:border-white/10 dark:text-white/70"
                                       required asp-for="@Model.Password">
                                        </div>
                                    </div>
                                    <!-- End Form Group -->

                                    <!-- Form Group -->
                                    <div>
                                        <label for="confirm-password" class="block text-sm mb-2 dark:text-white">Þifre
                                            Tekrar</label>
                                        <div class="relative">
                                            <input type="password" 
                                                class="py-2 px-3 block w-full border-gray-200 rounded-sm text-sm focus:border-primary focus:ring-primary dark:bg-bgdark dark:border-white/10 dark:text-white/70"
                                       required asp-for="@Model.ConfirmPassword">
                                        </div>
                                    </div>
                                    <!-- End Form Group -->

                                    <!-- Checkbox -->
                                    <div class="flex items-center">
                                        <div class="flex">
                                            <input id="remember-me" name="remember-me" type="checkbox"
                                                class="shrink-0 mt-0.5 border-gray-200 rounded text-primary pointer-events-none focus:ring-primary dark:bg-bgdark dark:border-white/10 dark:checked:bg-primary dark:checked:border-primary dark:focus:ring-offset-white/10">
                                        </div>
                                        <div class="ltr:ml-3 rtl:mr-3">
                                <label for="remember-me" class="text-sm dark:text-white">
                                    Bütün Þartlarý Ve Koþullarý <a class="text-primary decoration-2 hover:underline font-medium"
                                                    asp-controller="Pages" asp-action="terms"></a>Kabul Ediyorum</label>
                                        </div>
                                    </div>
                                    <!-- End Checkbox -->

                                    <button type="submit"
                                        class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-sm border border-transparent font-semibold bg-primary text-white hover:bg-primary focus:outline-none focus:ring-0 focus:ring-primary focus:ring-offset-0 transition-all text-sm dark:focus:ring-offset-white/10">Üye ol
                                        </button>
                                </div>
                            </form>
                            <!-- End Form -->
                        </div>
                    </div>
                </div>
            </main>
            <!-- ========== END MAIN CONTENT ========== -->

@section scripts {



}

@model AdminListAddInstitutionVM
@{
    ViewData["Title"] = "ListInstitutions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Css {



}
<div class="content">

    <!-- Start::main-content -->
    <div class="main-content">

        <!-- Page Header -->
        <div class="block justify-between page-header sm:flex">
            <div>
                <h1 class="text-gray-700 hover:text-gray-900 dark:text-white dark:hover:text-white text-2xl font-medium"> Kurumlar</h1>
            </div>
           
        </div>
        <!-- Page Header Close -->
        <!-- Start::row-1 -->
      
        <!-- End::row-1 -->

    </div>
    <!-- Start::main-content -->
    <form action="/Admin/Institution/AddInstitutions" method="post">
    <div class="col-span-12 lg:col-span-4">
        <div class="box">
            <div class="box-header">
                <h5 class="box-title">Kurum Ekleme</h5>
            </div>
            <div class="box-body">
                <label for="input-label"
                       class="ti-form-label">Kurum</label>
                <input type="text"  class="ti-form-input" placeholder="Kurum adı giriniz" required asp-for="@Model.AdminInstitutionVM.Name">
            </div>
            <div>
                <button type="submit" class="ti-btn ti-btn-primary">Ekle</button>

            </div>
        </div>
    </div>
    </form>
    <div class="grid grid-cols-12 gap-6">
        <div class="col-span-12">
            <div class="box">
                <div class="box-header">
                    <h5 class="box-title">Kurumların Listesi</h5>
                </div>
                <div class="box-body">
                    <div class="overflow-auto table-bordered">
                        <table class ="ti-custom-table ti-striped-table ti-custom-table-hover">
                            <tr>
                                <th>Adı</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                            @foreach (var item in Model.AdminInstitutionVMs)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td><a href="/Admin/Institution/DeleteInstitution/@item.ID" class="badge bg-danger text-white">Sil</a></td>



                                    <td><a href="/Admin/Institution/UpdateInstitution/@item.ID" class="badge bg-warning text-white">Güncelle</a></td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

@section scripts {



}
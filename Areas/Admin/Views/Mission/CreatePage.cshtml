@model MissionCreatePage
@{
    ViewData["Title"] = "CreatePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Css {
    <style>
        .outer-grid {
            
        }

        .dragula-container {
            border: 2px dashed #ccc;
            padding: 10px;
            min-height: 100px;
            cursor: pointer; 
        }

            .dragula-container.disabled {
                opacity: 0.5; 
                pointer-events: none; 
            }

        
    </style>
}
<div class="content">

    <!-- Start::main-content -->
    <div class="main-content">

        <!-- Page Header -->
        <div class="block justify-between page-header sm:flex">
            <div>
                <h3 class="text-gray-700 hover:text-gray-900 dark:text-white dark:hover:text-white text-2xl font-medium"> Sayfa Oluşturma Sayfası</h3>
            </div>
            <ol class="flex items-center whitespace-nowrap min-w-0">
                <li class="text-sm">
                    <a class="flex items-center font-semibold text-primary hover:text-primary dark:text-primary truncate" href="javascript:void(0);">
                        Pages
                        <i class="ti ti-chevrons-right flex-shrink-0 mx-3 overflow-visible text-gray-300 dark:text-gray-300 rtl:rotate-180"></i>
                    </a>
                </li>
                <li class="text-sm text-gray-500 hover:text-primary dark:text-white/70 " aria-current="page">

                </li>
            </ol>
        </div>
        <!-- Page Header Close -->
        <!-- Start::row-1 -->
        <div class="grid grid-cols-12 gap-6">
            <div class="col-span-6">
                <div class="box">
                    <div class="box-body">
                        @if (Model != null)
                        {
                            @foreach (var item in Model.PageVMs.OrderBy(x => x.Order))
                            {
                                string containerClass = item.InstitutionID != Model.Appuser.InstitutionID ? "dragula-container disabled" : "dragula-container";

                                <div class="@containerClass" onclick="handleClick('@item.PageType', '@item.ID')">
                                    <span id="@item.ID">
                                        @if (item.PageType == 0)
                                        {
                                            @(item.InstitutionID != Model.Appuser.InstitutionID ? "Resim senin görevinde değil" : "Resim senin görevin")
                                        }
                                        else if (item.PageType == 1)
                                        {
                                            @(item.InstitutionID != Model.Appuser.InstitutionID ? "Yazı senin görevin değil" : "Yazı senin görevin")
                                        }
                                        else
                                        {
                                            @(item.InstitutionID != Model.Appuser.InstitutionID ? "Data senin görevin değil" : "Data senin görevin")
                                        }
                                    </span>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-span-6">
                <div class="box">
                    <div class="box-body">

                        <form  method="post" action="/Admin/Mission/CreatePage" enctype="multipart/form-data">
                            
                            <div id="dynamic-id"></div>

                            <div id="dynamic-content"></div>
                            <button type="submit" class="ti-btn ti-btn-primary">Gönder</button>
                        </form>
                    </div>
                </div>
                 
            </div>
        </div>


    </div>
    <!-- Start::main-content -->

</div>

@section scripts {
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea#myTextArea'
        });
    </script>
    <script>
       function handleClick(pageType, itemId) {
    var dynamicID = document.getElementById('dynamic-id');
    dynamicID.innerHTML = '<input type="hidden" name="itemId" value="' + itemId + '" >';
    var dynamicContent = document.getElementById('dynamic-content');
    dynamicContent.innerHTML = ''; 
    
    console.log('page id =' + itemId)
    if (pageType == 0) {
        dynamicContent.innerHTML = '<input type="file" name="Image" accept="image/*">';
    } else if (pageType == 1) {
        dynamicContent.innerHTML = '<textarea id="myTextArea" name="TextArea"></textarea>';
        tinymce.init({
            selector: '#myTextArea'
        });
    } else if (pageType == 2) { 
        dynamicContent.innerHTML = '<input type="text" name="dataInput" placeholder="Veri girin">';
    }
}

       
    </script>

}

